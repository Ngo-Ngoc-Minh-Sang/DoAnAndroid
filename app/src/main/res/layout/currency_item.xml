<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageViewFlag"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/textViewCurrencyCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/imageViewFlag"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewConversionRateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCurrencyCode"
        android:layout_marginStart="15dp"
        android:layout_marginTop="-2dp"
        android:layout_toEndOf="@id/imageViewFlag"
        android:text="Mệnh giá: "
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textViewConversionRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewConversionRateLabel"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@id/imageViewFlag"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textViewConvertedAmountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewConversionRate"
        android:layout_marginStart="18dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@id/imageViewFlag"
        android:text="Mệnh giá chuyển: "
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textViewConvertedAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewConvertedAmountLabel"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@id/imageViewFlag"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold" />

</RelativeLayout>
