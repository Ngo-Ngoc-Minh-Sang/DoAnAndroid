<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    tools:context=".FragmentBaoCao">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_marginTop="170dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPTThuNhap"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:text="Phân tích thu nhập"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnPTChiTieu"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:layout_marginLeft="10dp"
            android:text="Phân tích chi tiêu"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="170dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPTTaiChinh"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:text="Phân tích tài chính"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnTaiChinh"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:layout_marginLeft="10dp"
            android:text="Tài chính hiện tại"
            android:textColor="@color/black"/>

    </LinearLayout>

</FrameLayout>